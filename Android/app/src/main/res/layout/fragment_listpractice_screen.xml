<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearListPracticeScreen"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icons8goback50"
            android:id="@+id/buttonBackPracticeScreen"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:layout_weight="9"
            android:background="@color/colorAccent"
            android:text="List Practice"
            android:textSize="30sp"
            android:gravity="center"
            />
    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearListPracticeScreen"
        tools:layout_editor_absoluteX="4dp"
        android:layout_marginTop="5dp"
        android:id="@+id/listViewPracticeScreen"
        >

    </ListView>
</android.support.constraint.ConstraintLayout>